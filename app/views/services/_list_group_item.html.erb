<li class="list-group-item d-flex justify-content-between">
  <div><%= image_tag service.photo, class: "service-photo" if service.photo.attached? %></div>
  <div class="ms-2 me-auto">
    <div class="fw-bold"><%= service.name %></div>
    <small style="word-wrap: break-word; overflow-wrap: break-word; max-width: 400px; display: block;"><%= service.description %></small>
  </div>

  <div class="d-flex align-items-center">
    <div class="d-flex flex-column align-items-end me-2">
      <div>$<%= service.price %></div>
      <div><small><%= service.to_time %></small></div>
    </div>

    <div>
      <% if business.owner != current_user %>
        <%= link_to new_booking_path(
            business_id: @business.id,
            service_id: service.id,
      ),  class: "btn btn-primary", 
          style: "width: 75px; height: 40px;" do %>
          Book
        <% end %>
      <% else %>
        <%= link_to edit_service_path(service), class: "btn btn-secondary", style: "width: 75px; height: 40px;" do %>
          Edit
        <% end %>
      <% end %>
    </div>
  </div>

</li>
