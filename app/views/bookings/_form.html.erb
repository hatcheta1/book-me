
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.hidden_field :client, value: current_user.id %>
    <%= f.hidden_field :business_id, value: @booking.business_id %>
    <%= f.hidden_field :service_id, value: @booking.service_id %>
    <%= f.association :business, selected: @booking.business_id %>
    <%= f.association :service, selected: @booking.service_id %>
    <!-- TODO: ensure service time fits within business hours 
    and ensure there is not an overlapping booking -->
    <%= f.input :start_time %>
    <%= f.hidden_field :end_time %>
    <%= f.input :date %>
    <%= f.input :time_zone %>
    <%= f.input :accepted %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
