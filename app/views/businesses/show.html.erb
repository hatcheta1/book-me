<h1 class="mt-3">
  <%= @business.name %>
</h1>

<div>
  <%= @business.address %>
</div>

<div>
  Owner: <%= @business.owner.full_name %>
</div>

<h3 class="mt-4 d-flex justify-content-between">
  Services
  <% if @business.owner == current_user %>
    <%= link_to '/services/new', class: 'btn btn-primary' do %>
      Add a service
    <% end %>
  <% end %>
</h3>

<ul class="list-group">
  <% @business.services.each do |service| %>
    <%= render "services/list_group_item", service: service, business: @business %>
  <% end %>
</ul>

<div class="mt-3">
  <%= link_to "Edit business profile", edit_business_path(@business) %> |
  <%= link_to "Back to businesses", businesses_path %>

  <%= button_to "Destroy this business", @business, method: :delete %>
</div>
