<div class="container mt-4">
  <div class="row">
    <!-- Left Column: Business Info and Hours -->
    <div class="col-md-4">
      <h1 class="mt-3">
        <%= image_tag @business.logo, class: "logo" if @business.logo.attached? %>
        <%= @business.name %>
      </h1>

      <div>
        <%= @business.address %>
      </div>

      <small>
        <%= image_tag @business.owner.profile_picture, class: "profile-picture" if @business.owner.profile_picture.attached? %>
        <%= @business.owner.full_name %>
      </small>

      <div class="mt-2">
        <% if @business.owner == current_user %>
          <%= link_to edit_business_path(@business), class: 'btn btn-secondary' do %>
            Edit business profile
          <% end %>
        <% end %>
      </div>

      <div class="mt-4">
        <div class="card">
          <div class="card-header d-flex align-items-center justify-content-between">
            <h4>Hours</h4>
            <% if @business.owner == current_user %>
              <%= link_to business_hours_path, class: "btn btn-secondary" do %>
                Edit business hours
              <% end %>
            <% end %>
          </div>

          <% @business_hours.each do |day_hours| %>
            <ul class="list-group list-group-flush">
              <% if !day_hours.closed %>
                <li class="list-group-item">
                  <%= day_hours.day_of_the_week %>:
                  <%= day_hours.opening_time.strftime("%l:%M %P") %> - 
                  <%= day_hours.closing_time.strftime("%l:%M %P") %>
                </li>
              <% else %>
                <li class="list-group-item">
                  <%= day_hours.day_of_the_week %>: closed
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column: Services -->
    <div class="col-md-8">
      <h3 class="mt-4 d-flex justify-content-between">
        Services
        <% if @business.owner == current_user %>
          <%= link_to '/services/new', class: 'btn btn-primary' do %>
            Add a service
          <% end %>
        <% end %>
      </h3>

      <ul class="list-group">
        <% @business.services.each do |service| %>
          <%= render 'services/list_group_item', service: service, business: @business %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
